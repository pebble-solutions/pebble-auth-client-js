{
  "compilerOptions": {
    "outDir": "./lib",
    "rootDir": "./src",
    "target": "ES2016",
    "strict": true,
    "moduleResolution": "node",
    "declaration": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "tests", "**/__test__/*"]
}